<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/title_height"
              android:background="@drawable/icon_title_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:paddingBottom="10dp"
              android:paddingLeft="15dp"
              android:paddingTop="@dimen/status_padding">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/corner_gay_write">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:src="@drawable/icon_search"/>

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_search_delet"
            android:layout_toRightOf="@+id/iv"
            android:background="@null"
            android:ellipsize="end"
            android:hint="@string/qsrddh"
            android:imeOptions="actionSearch"
            android:lines="1"
            android:maxLength="50"
            android:singleLine="true"
            android:textColor="@color/text_title"
            android:textColorHint="@color/app_gray_weak"
            android:textSize="@dimen/app_paragraph"/>

        <ImageView
            android:id="@+id/iv_search_delet"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:src="@drawable/search_selector"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_cencel"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:maxEms="2"
        android:text="@string/g_qx"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_17"/>


</LinearLayout>