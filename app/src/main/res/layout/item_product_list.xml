<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="130dp"
              android:gravity="center"
              android:orientation="vertical">

    <View
        style="@style/horizontal_large_line"
        android:background="#efefef"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <CheckBox
            android:id="@+id/cb_product_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:button="@drawable/product_button_check"/>

        <ImageView
            android:id="@+id/iv_product_img"
            android:layout_width="125dp"
            android:layout_height="120dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_toRightOf="@id/cb_product_item"
            android:background="@color/black"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:layout_width="34dp"
            android:layout_height="18dp"
            android:layout_alignRight="@id/iv_product_img"
            android:layout_alignTop="@id/iv_product_img"
            android:background="@drawable/shape_activity_tag"
            android:gravity="center"
            android:text="秒杀"
            android:textColor="@color/white"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product_img"
            android:ellipsize="end"
            android:lines="2"
            android:text="15616516651651515"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_small"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_below="@id/tv_product_name"
            android:layout_toRightOf="@id/iv_product_img"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lin_product_package_large"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginRight="20dp"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv_product_package_large"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/d_large_package"/>

                    <TextView
                        android:id="@+id/tv_product_num_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="120"
                        android:textColor="@color/black_brown1"
                        android:textSize="@dimen/app_fuzu_label"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:gravity="bottom"
                        android:text="@string/jian"
                        android:textColor="@color/black_brown1"
                        android:textSize="@dimen/app_fuzu_label"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_product_package_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/iv_product_package_small"
                        android:layout_width="26dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="3dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/d_small_package"/>

                    <TextView
                        android:id="@+id/tv_product_num_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:text="120"
                        android:textColor="@color/black_brown1"
                        android:textSize="@dimen/app_fuzu_label"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="3dp"
                        android:gravity="bottom"
                        android:text="@string/jian"
                        android:textColor="@color/black_brown1"
                        android:textSize="@dimen/app_fuzu_label"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/iv_product_img"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginRight="30dp"
                android:text="￥2.35"
                android:textColor="@color/price_red"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/g_kc"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/app_fuzu_label"/>

                <TextView
                    android:id="@+id/tv_product_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="26165"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/app_fuzu_label"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_product_num_sub"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:scaleType="center"
                    android:src="@drawable/product_num_sub_list"/>

                <TextView
                    android:id="@+id/et_product_select_num"
                    android:layout_width="46dp"
                    android:layout_height="24dp"
                    android:layout_margin="2dp"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:text="9999"
                    android:textColor="@color/text_title"
                    android:textSize="@dimen/app_paragraph"/>

                <ImageView
                    android:id="@+id/iv_product_num_add"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:scaleType="center"
                    android:src="@drawable/product_num_add_list"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>