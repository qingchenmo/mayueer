<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="6dp"
              android:background="#efefef"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/product_list_grid_img_height">

            <ImageView
                android:id="@+id/iv_product_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="34dp"
                android:layout_height="18dp"
                android:layout_alignRight="@id/iv_product_img"
                android:layout_alignTop="@id/iv_product_img"
                android:background="@drawable/shape_activity_tag"
                android:gravity="center"
                android:text="秒杀"
                android:textColor="@color/white"
                android:textSize="11sp"/>

            <CheckBox
                android:id="@+id/cb_product_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:button="@drawable/product_button_check"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/tv_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:lines="2"
                android:text="15616516651651515"
                android:textColor="@color/text_title"
                android:textSize="@dimen/text_small"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/tv_product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|bottom"
                    android:layout_marginBottom="6dp"
                    android:text="￥2.35"
                    android:textColor="@color/price_red"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lin_product_package_large"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/iv_product_package_large"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/d_large_package"/>
                        <!--radio_large_select-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_num_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:text="120"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:gravity="bottom"
                                android:text="@string/jian"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin_product_package_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <ImageView
                            android:id="@+id/iv_product_package_small"
                            android:layout_width="26dp"
                            android:layout_height="24dp"
                            android:src="@drawable/d_small_package"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_product_num_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="120"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:gravity="bottom"
                                android:text="@string/jian"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/g_kc"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/app_fuzu_label"/>

                    <TextView
                        android:id="@+id/tv_product_stock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="26165"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/app_fuzu_label"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_product_num_sub"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:scaleType="center"
                        android:src="@drawable/product_num_sub_list"/>

                    <TextView
                        android:id="@+id/et_product_select_num"
                        android:layout_width="46dp"
                        android:layout_height="24dp"
                        android:layout_margin="2dp"
                        android:gravity="center"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:text="9999"
                        android:textColor="@color/text_title"
                        android:textSize="@dimen/app_paragraph"/>

                    <ImageView
                        android:id="@+id/iv_product_num_add"
                        android:layout_width="31dp"
                        android:layout_height="31dp"
                        android:scaleType="center"
                        android:src="@drawable/product_num_add_list"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>