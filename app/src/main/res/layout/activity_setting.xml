<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_bg"
    android:orientation="vertical">

    <com.jlkf.ego.widget.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/title_setting"
        android:background="@color/white"
        app:view_type="back_title" />

    <LinearLayout
        android:id="@+id/ll_update_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:text="@string/change_password"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/img_fanhui" />
    </LinearLayout>

    <View style="@style/horizontal_small_line" />

    <LinearLayout
        android:id="@+id/ll_select_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:text="@string/Switch_language"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/img_fanhui" />
    </LinearLayout>

    <View style="@style/horizontal_small_line" />

    <LinearLayout
        android:id="@+id/ll_clear_cache"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:text="@string/Clear_cache"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/img_fanhui" />
    </LinearLayout>

    <View style="@style/horizontal_small_line" />

    <LinearLayout
        android:id="@+id/ll_update_vesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:text="@string/Version_update"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/img_fanhui" />
    </LinearLayout>

    <View style="@style/horizontal_small_line" />

    <LinearLayout
        android:id="@+id/ll_about_ego"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="20dp"
            android:text="@string/with_me"
            android:textColor="@color/text_title"
            android:textSize="@dimen/text_size" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/img_fanhui" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_outLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_btn_commit"
        android:gravity="center"
        android:text="@string/Logout"
        android:textColor="@color/white"
        android:textSize="@dimen/text_title_size" />

</LinearLayout>
