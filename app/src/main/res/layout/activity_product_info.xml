<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkf.ego.activity.ProductInfoActivity">

    <include layout="@layout/title_layout" />

    <RelativeLayout
        android:id="@+id/rl_partent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/iv_goods_img1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_margin="10dp"
                        android:background="@drawable/shape_half_white"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="条码:"
                            android:textColor="@color/white"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_goods_code"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:textColor="@color/white"
                            android:textSize="13sp" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="15dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_activity"
                            android:layout_width="44dp"
                            android:layout_height="18dp"
                            android:layout_gravity="top"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/shape_activity_tag"
                            android:gravity="center"
                            android:text="秒杀"
                            android:textColor="@color/white"
                            android:textSize="11sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_goods_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLength="50"
                            android:text="             WIRELESS CHARGER-WHITECWHITECWHITEC"
                            android:textColor="@color/color_333333"
                            android:textSize="16sp" />
                    </FrameLayout>


                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:background="#d7d7d7" />

                    <CheckBox
                        android:id="@+id/rb_connection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:button="@null"
                        android:drawableTop="@drawable/product_collection"
                        android:text="@string/g_sc"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_13" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_event_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="活动截止时间：2018.6.28"
                        android:textColor="#a5a5a5"
                        android:textSize="13sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="visible"
                        android:layout_marginBottom="10dp"
                        android:background="#d7d7d7" />

                    <TextView
                        android:id="@+id/tv_event_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="活动：满5件每件￥120"
                        android:textColor="#636363"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="秒杀：限购3件，活动共99件"
                        android:textColor="#636363"
                        android:visibility="gone"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="预订：发货时间2018.8.29"
                        android:textColor="#636363"
                        android:visibility="gone"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:text="赠品：折扣赠品，折扣金额等值购买"
                        android:textColor="#636363"
                        android:visibility="gone"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#d7d7d7" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_price"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="5dp"
                        android:text="@string/money"
                        android:textColor="#e94a52"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv"
                        android:textColor="#e94a52"
                        android:textSize="30sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_price"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/tv_price"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text="@string/g_yxl"
                            android:textColor="#a5a5a5"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tv_sale_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:textColor="#a5a5a5"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@id/tv_price"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/lin_product_package_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginRight="20dp"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <ImageView
                                android:id="@+id/iv_product_package_large"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="3dp"
                                android:src="@drawable/d_large_package" />

                            <TextView
                                android:id="@+id/tv_product_num_large"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:text="0"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="3dp"
                                android:gravity="bottom"
                                android:text="@string/jian"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/lin_product_package_small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:clickable="true"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <ImageView
                                android:id="@+id/iv_product_package_small"
                                android:layout_width="26dp"
                                android:layout_height="24dp"
                                android:layout_marginRight="3dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/d_small_package" />

                            <TextView
                                android:id="@+id/tv_product_num_small"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:gravity="bottom"
                                android:text="0"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="3dp"
                                android:gravity="bottom"
                                android:text="@string/jian"
                                android:textColor="@color/black_brown1"
                                android:textSize="@dimen/app_fuzu_label" />
                        </LinearLayout>
                    </LinearLayout>
                    <!--<CheckBox
                        android:id="@+id/rb_connection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tv_price"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="5dp"
                        android:button="@drawable/product_collection"
                        android:drawablePadding="5dp"
                        android:text="@string/g_sc"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_13" />-->
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:gravity="right"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/lin_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_product_num_sub"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:src="@drawable/product_num_sub" />

                        <TextView
                            android:id="@+id/et_product_select_num"
                            android:layout_width="46dp"
                            android:layout_height="24dp"
                            android:layout_margin="2dp"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            android:text="0"
                            android:textColor="@color/text_title"
                            android:textSize="@dimen/app_paragraph" />

                        <ImageView
                            android:id="@+id/iv_product_num_add"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/product_num_add" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_goods_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:lineSpacingExtra="10dp"
                    android:textColor="#333333"
                    android:textSize="16sp" />

                <View
                    style="@style/horizontal_small_line"
                    android:layout_marginLeft="0dp" />

                <LinearLayout
                    android:id="@+id/lin_parent_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:paddingTop="20dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="规格:"
                        android:textColor="#333333"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:id="@+id/lin_size"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_goods_img"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:orientation="vertical" />


            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/fl_shop_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="15dp">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/transparent"
                android:clickable="false"
                android:src="@mipmap/product_showcar" />

            <TextView
                android:id="@+id/tv_car_num"
                style="@style/tv_has_order"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp" />
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>

