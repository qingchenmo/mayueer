<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jlkf.ego.newpage.activity.ValidationActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@mipmap/bg_identify">

        <com.jlkf.ego.widget.TitleView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:showLine="false"
            app:view_type="back" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Hi,\nMr.Koody"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="请输入您的审核码开启会员权限："
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="35dp"
        android:background="#f5f5f9"
        android:gravity="center"
        android:hint="请输入审核码"
        android:inputType="number"
        android:singleLine="true"
        android:textColor="@color/color_333333"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="请联系您的专属业务员客服获取审核码"
        android:textColor="#a5a5a5"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btn_sure"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        android:background="@mipmap/btn_upadte"
        android:text="确定"
        android:textColor="@color/white" />

</LinearLayout>
