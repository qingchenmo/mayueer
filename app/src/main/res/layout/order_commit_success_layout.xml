<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@drawable/icon_title_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView
                android:id="@+id/iv_success"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:src="@mipmap/icon_order_commit_success"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_success"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxEms="6"
                    android:text="@string/s_ddtjcg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_title_size"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="@string/s_4xsnkyxg"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_success"
                android:layout_toRightOf="@id/iv_success"
                android:ellipsize="end"
                android:lines="1"
                android:text="@string/s_kfryhz24xsnynlx"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>