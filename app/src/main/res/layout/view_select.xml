<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/iv_delet"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:layout_width="@dimen/delet_btn_with"
                android:layout_height="@dimen/delet_btn_with"
                android:src="@drawable/product_num_sub"/>
        </LinearLayout>

        <TextView
            android:id="@+id/et_number"
            android:layout_width="57dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@+id/iv_delet"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/text_title"
            android:textSize="@dimen/size_14"/>

        <LinearLayout
            android:layout_toRightOf="@+id/et_number"
            android:id="@+id/iv_add"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView

                android:layout_width="@dimen/add_btn_with"
                android:layout_height="@dimen/add_btn_with"
                android:src="@drawable/product_num_add"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>